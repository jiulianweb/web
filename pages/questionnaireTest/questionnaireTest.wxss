/* pages/questionnaireTest/questionnaireTest.wxss */
.headerImg{
    width: 100%;
    height: 268rpx;
}
.headerImg image{
    height: 100%;
    width: 100%;
}
.question{
    position: absolute;
    left: 40rpx;
    top: 223rpx;
    width: 672rpx;
    height: 530rpx;
    border-radius: 20rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 20rpx 0px rgba(255, 237, 245, 1);
    border: 2rpx solid rgba(255, 255, 255, 0);
    background: #fff;
    z-index: 99;
}
.question .title{
    margin-top: 38rpx;
    margin-left: 40rpx;
    width: 100%;
    height: 40rpx;
    line-height: 40rpx;
    color: rgba(34, 34, 34, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: SourceHanSansSC-regular;
}
.question .form{
    margin-top: 72rpx;
}
.question .form view{
    margin-left: 46rpx;
    box-sizing: border-box;
    width: 580rpx;
    height: 80rpx;
    margin-bottom: 45rpx;
    padding-left: 64rpx;
    line-height: 80rpx;
    border-radius: 60rpx;
    border: 2rpx solid rgba(245, 245, 245, 1);
    color: rgba(16, 16, 16, 1);
    font-size: 28rpx;
    text-align: left;
    font-family: SourceHanSansSC-regular;
}
.operate{
    margin-top: 600rpx;
}
.operate .nextBtn,
.operate .finish{
    width: 670rpx;
    height: 88rpx;
    margin-left: 42rpx;
    line-height: 88rpx;
    border-radius: 60rpx;
    background-color: rgba(239, 115, 142, 1);
    text-align: center;
    box-shadow: 2rpx 2rpx 16rpx 0px rgba(255, 199, 199, 1);
    border: 2rpx solid rgba(255, 255, 255, 0);
    color: rgba(255, 255, 255, 1);
    font-size: 32rpx;
    font-family: SourceHanSansSC-regular;
}
.prevNext{
    overflow: hidden;
}
.prevNext .prev,
.prevNext .next {
    float: left;
    width: 274rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 60rpx;
    background-color: rgba(207, 207, 207, 1);
    text-align: center;
    box-shadow: 2rpx 2rpx 16rpx 0px rgba(247, 247, 247, 1);
    border: 2rpx solid rgba(255, 255, 255, 0);
    color: rgba(255, 255, 255, 1);
    font-size: 32rpx;
    font-family: SourceHanSansSC-regular;
}
.prevNext .prev{
    margin-right: 100rpx;
    margin-left: 50rpx;
}
.prevNext .hover{
    background: #EF738E;
}