page, .content {
  width: 100%;
}

.content {
  overflow: hidden;
  padding-bottom: 80rpx;
}

.title {
  padding-top: 22rpx;
  padding-left: 42rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: rgba(34, 34, 34, 1);
  font-size: 40rpx;
  text-align: left;
  font-family: PingFangSC-regular;
}

.tip {
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(189, 189, 190, 1);
  font-size: 28rpx;
  text-align: left;
  padding-left: 42rpx;
  margin-top: 6rpx;
  font-family: SourceHanSansSC-regular;
}

.timeMain {
  margin: 44rpx 42rpx 0 42rpx;
}

.timeMain .timeItem {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.timeMain .select {
  width: 100%;
  margin-top: 28rpx;
  overflow: hidden;
}

.timeMain .select .section__title {
  font-size: 28rpx;
  color: #222222;
  font-family: "SourceHanSansSC-regular";
}

.timeMain .select picker {
  display: inline-block;
}

.timeMain .select .picker {
  display: inline-block;
  font-size: 30rpx;
  color: #222222;
  font-family: "SourceHanSansSC-regular";
}

.timeMain .daily {
  font-size: 24rpx;
  color: #A2A2A2;
  font-family: "SourceHanSansSC-regular";
}

.timeMain .select .middle {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
  font-size: 36rpx;
  color: #222222;
  font-family: "SourceHanSansSC-regular";
}

.operate {
  margin: 460rpx 40rpx 48rpx 40rpx;
}

.operate .button {
  width: 670rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 60rpx;
  background-color: rgba(239, 115, 142, 1);
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0);
  color: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  font-family: PingFangSC-regular;
}
